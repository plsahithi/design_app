<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">
    <TableRow>
        <LinearLayout
            android:id="@+id/ln2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            >
            <Button
                android:id="@+id/mail"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/welcome_left_tab"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/txtLocker"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Select Your Wifi"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textColor="#819FF7"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The below will let you select a Wifi. Once selected it should move you to the next screen."
                    android:textSize="18dp"
                    android:textColor="#FF4081"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/customerborder"
                    android:layout_marginBottom="60dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/wifiicon1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/wifi_signal"
                        android:layout_marginTop="0dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Roman 2G"
                        android:textSize="19dp"
                        android:textColor="#819FF7"
                        android:layout_marginTop="0dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/wifiicon1"
                        android:gravity="center"/>


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:src="@drawable/separator"
                        android:layout_marginTop="0dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/customerborder"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/wifiicon2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/wifi_signal"
                            android:layout_marginTop="0dp"/>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="NotyouNetwork"
                            android:textSize="19dp"
                            android:textColor="#819FF7"
                            android:layout_marginTop="0dp"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/wifiicon2"
                            android:gravity="center"/>


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:src="@drawable/separator"
                        android:layout_marginTop="0dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/customerborder"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/wifiicon3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/wifi_signal"
                            android:layout_marginTop="0dp"/>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:text="xfinitywifi"
                            android:textSize="19dp"
                            android:textColor="#819FF7"
                            android:layout_marginTop="0dp"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/wifiicon3"
                            android:gravity="center"/>


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:src="@drawable/separator"
                        android:layout_marginTop="0dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/customerborder"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/wifiicon4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/wifi_signal"
                            android:layout_marginTop="0dp"/>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:text="goroplayfi"
                            android:textSize="19dp"
                            android:textColor="#819FF7"
                            android:layout_marginTop="0dp"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/wifiicon4"
                            android:gravity="center"/>


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:src="@drawable/separator"
                        android:layout_marginTop="0dp"/>

                </LinearLayout>





            </LinearLayout>
            <Button
                android:layout_width="290dp"
                android:layout_height="30dp"
                android:background="@drawable/loading_screen2"
                android:textColor="#FFFFFFFF"
                android:textSize="17dp"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"
            android:id="@+id/ln"
            >
            <Button
                android:id="@+id/security"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/wifi_password_right_tab"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                />
        </LinearLayout>


    </TableRow>

</TableLayout>