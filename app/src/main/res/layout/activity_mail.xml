<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.controller.setup.systemcontrol.MailActivity">

    <LinearLayout
        android:id="@+id/example_get_by_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ln"
            android:layout_toRightOf="@+id/ln2"
            >
            <LinearLayout
                android:id="@+id/example_get_by_id2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mail"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:textColor="#819FF7"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/mail"
                    android:layout_below="@+id/tv"


                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last open : 2.42 pm"
                    android:textColor="#819FF7"
                    android:layout_marginTop="30dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Open 5 times today"
                    android:textColor="#819FF7"
                    android:layout_marginTop="30dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/setting"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/security_tab_right"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="left|center_vertical"
            />
        <Button
            android:id="@+id/security"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/setting_tab_right"
            android:layout_marginRight="3dp"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="left|center_vertical"
            />


    </LinearLayout>




</LinearLayout>
